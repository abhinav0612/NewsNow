<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="2dp"
    android:layout_width="match_parent"
    android:layout_margin="4dp"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="5dp"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="10dp"
                android:src="@drawable/news"
                android:layout_marginLeft="5dp"
                android:scaleType="centerCrop"
                android:id="@+id/recycle_card_image"
                android:layout_alignParentTop="true"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This is the Title"
                android:maxLines="3"
                android:textSize="14dp"
                android:ellipsize="end"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:layout_toRightOf="@id/recycle_card_image"
                android:id="@+id/recycle_card_title"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/recycle_card_title"
                android:text="Date/Time"
                android:layout_toRightOf="@id/recycle_card_image"
                android:id="@+id/recycle_card_time"/>
            <!--<TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:text="Type"
                android:layout_toRightOf="@id/recycle_card_time"
                android:layout_below="@id/recycle_card_title"
                android:id="@+id/recycle_card_type"/>-->
        </RelativeLayout>
        
    </androidx.cardview.widget.CardView>

</LinearLayout>